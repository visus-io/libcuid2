root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cpp,hpp,h}]
indent_style = space
indent_size = 4
max_line_length = 120

[{CMakeLists.txt,*.cmake,*.txt.in}]
indent_style = space
indent_size = 4
max_line_length = 120

[*.{yml,yaml}]
indent_style = space
indent_size = 2
max_line_length = 120

[*.json]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
max_line_length = 120
trim_trailing_whitespace = false

[*.sh]
indent_style = space
indent_size = 4
end_of_line = lf

[*.xml]
indent_style = space
indent_size = 2

[*.properties]
indent_style = space
indent_size = 4

[*.{1,3,7}]
indent_style = space
indent_size = 2

[debian/{control,copyright,changelog,rules,watch}]
indent_style = space
indent_size = 4
